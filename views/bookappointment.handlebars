{{#if loggedIn}}
 {{#each servcies}}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 border p-4 shadow bg-light">
            <div class="col-12">
                <h3 class="fw-normal text-secondary fs-4 text-uppercase mb-4">Appointment form</h3>
            </div>
            <form action="">
                <div class="row g-3">
                    <div class="col-md-6">
                        <input type="email" class="form-control" placeholder="Enter Email">
                    </div>
                    <div class="col-md-6">
                        <input type="date" class="form-control" placeholder="Enter Date">
                    </div>
                    <div class="col-md-6">
                        <input id="time-1" type="text" aria-live="assertive" aria-label="Use up or down arrow keys to change time">
                    </div>
                   
                    <div class="col-12">
                        <select class="form-select">
                            <option selected>Select Service</option>
                            <option value="1">{{name}}</option>
                           
                        </select>
                    </div>
                   
                    <div class="col-12">
                        <textarea class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div class="col-12 mt-5">                        
                        <button type="submit" class="btn btn-primary float-end">Book Appointment</button>
                        <button type="button" class="btn btn-outline-secondary float-end me-2">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
 {{/each}}

 {{else}}
<script src="js/login.js"></script>
 {{/if}}